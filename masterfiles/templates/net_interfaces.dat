[%CFEngine BEGIN %]
auto lo
iface lo inet loopback

auto $(base_config.net_dev)
iface $(base_config.net_dev) inet static
	address	$(base_config.net_addr)
	netmask $(base_config.net_mask)
[%CFEngine END %]
[%CFEngine am_gateway:: %]
	pre-up /sbin/iptables-restore /etc/network/firewall
[%CFEngine !am_gateway:: %]
	gateway $(base_config.net_gateway)
